#include<iostream>
using namespace std;
int main()
{

  int size,count=0,max,i;
  cin>>size;
  int ar[size];
  for(i=0;i<size;i++)
  cin>>ar[i];
  max=ar[0];
    for (i=0;i<size; i++)
    {
        if (ar[i]>max)
        {
            max = ar[i];
            count = 1;
        }
        else if (ar[i]==max)
        {
            count++;
        }
    }
cout<<count;
 return 0;
}
